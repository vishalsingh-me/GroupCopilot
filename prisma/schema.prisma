generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Enums ───────────────────────────────────────────────────────────────────

enum SenderType {
  user
  assistant
  system
  tool
}

enum Mode {
  brainstorm
  clarify
  tickets
  schedule
  conflict
}

enum AgentState {
  IDLE
  WEEKLY_KICKOFF
  SKELETON_DRAFT
  SKELETON_QA
  APPROVAL_GATE_1
  PLANNING_MEETING
  TASK_PROPOSALS
  APPROVAL_GATE_2
  TRELLO_PUBLISH
  MONITOR
  WEEKLY_REVIEW
}

enum ApprovalType {
  SKELETON
  TASK_PLAN
}

enum ApprovalStatus {
  pending
  approved
  rejected
}

enum VoteChoice {
  approve
  request_change
}

// ─── Core Tables ─────────────────────────────────────────────────────────────

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  rooms         RoomMember[]
  messages      Message[]
  approvalVotes ApprovalVote[]
  auditLogs     AuditLog[]
}

model Room {
  id            String   @id @default(cuid())
  code          String   @unique
  name          String?
  projectGoal   String?
  trelloBoardId String?
  trelloListId  String?
  createdAt     DateTime @default(now())

  members          RoomMember[]
  messages         Message[]
  agentSessions    AgentSession[]
  auditLogs        AuditLog[]
  healthSnapshots  HealthSnapshot[]
  trelloCardCache  TrelloCardCache[]
}

model RoomMember {
  id             String   @id @default(cuid())
  room           Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  roomId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         String
  role           String?
  trelloMemberId String?
  joinedAt       DateTime @default(now())

  @@unique([roomId, userId])
}

model Message {
  id           String     @id @default(cuid())
  room         Room       @relation(fields: [roomId], references: [id], onDelete: Cascade)
  roomId       String
  senderType   SenderType
  senderUser   User?      @relation(fields: [senderUserId], references: [id], onDelete: SetNull)
  senderUserId String?
  content      String
  mode         Mode
  metadata     Json?
  createdAt    DateTime   @default(now())
}

// ─── Agent Session ────────────────────────────────────────────────────────────

/// Persists the agent's state machine position per room per week.
/// `data` holds in-progress artefacts: skeleton draft, task proposals, etc.
model AgentSession {
  id         String     @id @default(cuid())
  room       Room       @relation(fields: [roomId], references: [id], onDelete: Cascade)
  roomId     String
  state      AgentState @default(IDLE)
  weekNumber Int
  data       Json       @default("{}")
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  approvalRequests ApprovalRequest[]

  @@unique([roomId, weekNumber])
}

// ─── Approval Gates ───────────────────────────────────────────────────────────

/// An approval gate the group must resolve before the agent advances.
model ApprovalRequest {
  id         String         @id @default(cuid())
  session    AgentSession   @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId  String
  type       ApprovalType
  /// The payload being approved (skeleton bullets, task proposal list, etc.)
  payload    Json
  status     ApprovalStatus @default(pending)
  resolvedAt DateTime?
  resolvedBy String?        // userId of whoever cast the deciding vote

  votes ApprovalVote[]
}

model ApprovalVote {
  id        String     @id @default(cuid())
  request   ApprovalRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  requestId String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  vote      VoteChoice
  comment   String?
  votedAt   DateTime   @default(now())

  @@unique([requestId, userId])
}

// ─── Audit Log ────────────────────────────────────────────────────────────────

/// Immutable record of every agent action and human approval.
model AuditLog {
  id        String   @id @default(cuid())
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  roomId    String
  type      String   // e.g. "agent_published_tasks", "approval_resolved", "gate_advanced"
  actor     User?    @relation(fields: [actorId], references: [id], onDelete: SetNull)
  actorId   String?
  payload   Json
  createdAt DateTime @default(now())
}

// ─── Health Snapshots ─────────────────────────────────────────────────────────

/// Weekly participation + stall counts. Display-only; no scores stored.
model HealthSnapshot {
  id            String   @id @default(cuid())
  room          Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  roomId        String
  weekNumber    Int
  /// { userId: contributionCount } map
  participation Json     @default("{}")
  stallCount    Int      @default(0)
  createdAt     DateTime @default(now())

  @@unique([roomId, weekNumber])
}

// ─── Trello Card Cache ────────────────────────────────────────────────────────

/// Minimal cache of Trello card metadata for stall detection and review summaries.
model TrelloCardCache {
  id            String    @id @default(cuid())
  room          Room      @relation(fields: [roomId], references: [id], onDelete: Cascade)
  roomId        String
  trelloCardId  String    @unique
  title         String
  status        String    // Trello list name (e.g. "To Do", "In Progress", "Done")
  dueDate       DateTime?
  lastSyncedAt  DateTime  @default(now())
}
